<!-- login -->
      <div class="modal fade" id="myModal4" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
          <div class="modal-content modal-info">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body modal-spa">
              <div class="login-grids">
                <div class="login">
                  <div class="login-bottom">
                    <h3>Sign up for free</h3>
                    <form id="new_user" class="new_user" accept-charset="UTF-8" action="/signup" method="post" authenticity_token="true">
                    <%= hidden_field_tag :authenticity_token,form_authenticity_token %>
                      <div class="sign-up">
                        <h4 for="user_email">Email :</h4>
                        <input id="user_email" type="text" name="user[email]" required="">
                      </div>
                      <div class="sign-up">
                        <h4 for="user_password">Password :</h4>
                        <input id="user_password" type="password" name="user[password]" required="">
                      </div>
                      <div class="sign-up">
                        <h4 for="user_password_confirmation">Re-type Password :</h4>
                        <input id="user_password_confirmation" type="password" name="user[password_confirmation]" required="">
                      </div>
                      <div class="sign-up">
                        <input type="submit" value="REGISTER NOW" >
                      </div>
                  </form>

                  </div>

                  <div class="login-right">
                    <h3>Sign in with your account</h3>
                    <form accept-charset="UTF-8" action="/signin" method="post" authenticity_token="true">
                    <%= hidden_field_tag :authenticity_token,form_authenticity_token %>
                      <div class="sign-in">
                        <h4>Email :</h4>
                        <input type="text" name="session[email]" required="">
                      </div>
                      <div class="sign-in">
                        <h4>Password :</h4>
                        <input type="password" name="session[password]" required="">
                        <a href="#">Forgot password?</a>
                      </div>
                      <div class="single-bottom">
                        <input type="checkbox"  id="brand" value="">
                        <label for="brand"><span></span>Remember Me.</label>
                      </div>
                      <div class="sign-in">
                        <input type="submit" value="SIGNIN" >
                      </div>
                    </form>
                  </div>
                  <div class="clearfix"></div>
                </div>
                <%= link_to "Sign in with facebook", "/auth/facebook",
                  id: "sign_in"%>
                <p>By logging in you agree to our <a href="#">Terms and Conditions</a> and <a href="#">Privacy Policy</a></p>
              </div>
            </div>
          </div>
        </div>
      </div>
<!-- //login -->
